@model IList<PikaShop.Shared.ProductVm>
<style>
    a.btn.btn-primary {
        display: block;
        margin: auto;
    }

    .card {
        width: 15rem;
        margin-right: 35px;
        margin-bottom: 20px;
    }

    .card-title {
        text-align: center;
    }

    .card-title:hover {
        color: red;
    }

    img {
        padding: 1rem;
    }

    .price {
        font-weight: 100;
    }

    .card-description {
        color: black;
        font-style: italic;
    }

    div.section_title.text-center {
        margin-top: 70px;
        margin-bottom: 30px;
    }

    .flex-container {
        display: flex;
        flex-wrap: wrap;
    }
</style>
<div class="section_title text-center">
    <h4>Related product</h4>
</div>
<div class="flex-container">
    @foreach (var product in Model)
    {
        <a asp-action="Details" asp-controller="Product" asp-route-id="@product.id_product">
            <div class="card">
                <img src="@Config.ApiUrl/@product.ThumbnailImageUrl" class="card-img-top" alt="Image game." />
                <div class="card-body">
                    <h5 class="card-title">@product.name_product</h5>
                    <p class="card-description">@product.description</p>
                    <p class="price">Price: $@product.price</p>
                    <a class="btn btn-primary" asp-controller="ShoppingCart" asp-action="BuyNow" asp-route-id="@product.id_product">Buy Now!</a>
                </div>
            </div>
        </a>
     }
</div>

