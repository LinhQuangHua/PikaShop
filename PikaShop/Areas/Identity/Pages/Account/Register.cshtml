@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
<style>
    #picture {
        width: 90%;
        padding: 10px;
        border-radius: 20px;
        transition: transform .2s;
    }
    .avatar {
        vertical-align: middle;
        border-radius: 50%;
        display: block;
        margin: auto;
        width: 40%;
    }

    #picture:hover {
        transform: scale(1.5);
    }
</style>
<h1><i class="fa fa-user" aria-hidden="true"></i> @ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <img src="~/image/avatar-cirle.png" alt="Avatar" class="avatar">
            <div class="form-group">
                <i class="fa fa-envelope" aria-hidden="true"></i>  <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <i class="fa fa-key" aria-hidden="true"></i>  <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <i class="fa fa-check-circle" aria-hidden="true"></i>  <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
    <div class="col-md-6 col-md-offset-2">
        <img src="~/image/register.jpg" id="picture" alt="A Toyota Previa covered in graffiti" loading="lazy">
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
